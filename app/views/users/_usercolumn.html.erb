						<div id="sidebar">
              <div id="profile-block">
                  <div class="profile-picture">
                      <%= image_tag @user.avatar.url :medium %>
                  </div>
                  <div class="profile-socmedia">
                      <a href="#"><%= image_tag ('icon-mail.png') %></a>
                      <a href="#"><%= image_tag ('icon-google-plus.png') %></a>
                      <a href="#"><%= image_tag ('icon-facebook.png') %></a>
                      <a href="#"><%= image_tag ('icon-twitter.png') %></a>
                      <a href="#"><%= image_tag ('icon-linkedin.png') %></a>
                  </div>
                  <div class="profile-bio">
                      <div class="bio-section">
                          <h4><%= @user.first_name %> <%= @user.last_name %></h4>
                          <h5><%= @user.occupation %></h5>
                      </div>
                      <div class="bio-section">
                          <p><%= @user.company %></p>
                          <p><%= @user.location %></p>
                      </div>
                      <div class="bio-section">
                          <p>Following topics: <a href="#">Venture capital</a>, <a href="#">Design</a>, <a href="#">Green Energy</a></p>
                      </div>
                  </div>
                  <div class="profile-brief">
                    <%= @user.in_brief %> 
                  </div>
              </div>
						</div>
