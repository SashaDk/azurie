  <form class="search" action="<%= search_questions_path %>">
	  <fieldset>
		  <div class="row">
			  <span>
          <input name="q" type="text" value="<% unless params[:q].blank? %><%= params[:q] %><% else %><%= t 'search_form.search_here' %><% end %>" onfocus="javascript:if(this.value=='<%= t 'search_form.search_here' %>'){this.value='';}" onblur="javascript:if(this.value==''){this.value='<%= t 'search_form.search_here' %>';}"/>
				  <input type="submit" value="" class="btn-search" />
			  </span>
		  </div>
	  </fieldset>
  </form>
