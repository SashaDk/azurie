<% content_for :promo do %>
<div id="featured" class="page-wrapper">
  <div class="wrapper-content">
    <div class="promo">
      <div id="slider"><div class="slides_container">
          <% briefing = @top_briefings.shuffle.first; @top_briefings.delete_if{|b| b.id == briefing.id } %> 
        <div style="width:955px;height:450px;">
          <div class="visual">
            <% if !briefing.video.blank? %>
            <script type="text/javascript">
              var BriefingVideo_<%= briefing.id %> = '<%= briefing.video.html_safe %>';
            </script>
            <% end %>
            <div <% if !briefing.video.blank? %>class="video-teaser" onclick='replaceVideoTeaser(this, BriefingVideo_<%= briefing.id %>)'<% end %>><%= image_tag(briefing.picture.url(:x_medium)) %></div>
          </div>
          <div class="slide_textbox">
            <span><%= link_to "MEDIA", briefings_path %></span>
            <strong><%= link_to briefing.title.upcase, briefing_path(briefing) %></strong>
            <p><%= truncate strip_tags(briefing.description), :length => 800, :separator => "\n" %> <%= link_to '(learn more)', briefing_path(briefing) %></a></p>
          </div>
        </div>
      </div></div>
    </div>
    <script type="text/javascript"> 
        $(function(){
            $("#slider").slides({
                play: 10000,
                pause: 2500,
                slideSpeed: 1000,
                hoverPause: true,
                generateNextPrev: false,
                effect: 'fade',
                generatePlayStop: false
            });
        });
    </script>
  </div>
</div>
<% end %>

<div id="content">
<% content_for :sidebar do %>
	<%= render 'shared/nav_sidebar' %>
<% end %>

<%= render 'shared/search_form' %>
<%#<h2>MEDIA</h2>%>
<strong class="decor"><span>DAILY TOP MEDIA</span></strong>
<div class="sections">  
	<% @top_briefings.each do |briefing| %>
	  <%= render briefing %>
	<% end %>
</div>

<%#<h2>Q&amp;A</h2>%>
<strong class="decor"><span>DAILY TOP Q&amp;As</span></strong>
<!-- sections -->
<div class="sections">  
	<% @top_questions.each do |question| %>
	  <%= render question %>
	<% end %>
</div>
<div class="sections">
  <%= link_to "MORE Q&amp;As".html_safe, questions_path, :class => 'load load-more-questions' %>
</div>
<div class="section-area">
	<!--a href="#" class="load">LOAD MORE Q&amp;As</a-->
	<h4>CAN'T FIND AN ANSWER? <%= link_to 'THEN POST YOUR QUESTION HERE', new_question_path %></a></h4>
</div>  
</div>
