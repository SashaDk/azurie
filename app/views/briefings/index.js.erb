<% briefings_html = ""; @briefings.each {|b| briefings_html += render(b) } %>
$(".briefings-list").append("<%= my_escape_javascript(briefings_html).html_safe%>");
<% if @briefings_count <= WillPaginate.per_page * params[:page].to_i %>
  $(".load-more-briefings").hide();  
<% else %>
  $(".load-more-briefings").attr("href", "<%= url_for params.merge(:page => params[:page].to_i + 1)%>");
<% end%>
