<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @question.title %>
</p>

<p>
  <b>Description:</b>
  <%= @question.description %>
</p>

<p>
  <b>Category:</b>
  <%= "#{category1_name(@question.category)} | #{category2_name(@question.category)}" %>
</p>

<p>
  <b>Tags:</b>
  <%= @question.tag_list %>
</p>

<p>
  <b>Author:</b>
  <%= @question.user.display_name %>
</p>


