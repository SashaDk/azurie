<div id="content">

<ul class="naving">
  <li><span>SECURITY</span></li>
</ul>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <fieldset>
  
  <div class="form-section">
    <%= f.label :email %>
    <%= f.email_field :email, :class => 'size2' %>
  </div>

  <div class="form-section">
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'size2' %>
  </div>

  <div class="form-section">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => 'size2' %>
  </div>

  <div class="form-section">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, :class => 'size2' %>
  </div>

  <div class="form-section-submit"><%= f.submit "Update" %></div>
  
  </fieldset>
<% end %>
</div>