  <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script></li>
  <li>
    <iframe scrolling="no" frameborder="0" src="http://www.facebook.com/plugins/like.php?href=<%= question_answer_url(@answer.question,@answer) %>&amp;layout=button_count&amp;show_faces=true&amp;width=110&amp;action=like&amp;colorscheme=light&amp;height=20" style="border: medium none; overflow: hidden; width: 107px; height: 20px; position: relative;" allowtransparency="true"></iframe>
