<h1>Listing answers</h1>

<table>
  <tr>
    <th>Text</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.text %></td>
    <td><%= answer.user.display_name %></td>
    <td><%= link_to 'Show', [@question,answer] %></td>
    <td><%= link_to 'Edit', edit_question_answer_path(@question,answer) %></td>
    <td><%= link_to 'Destroy', [@question,answer], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Answer', new_question_answer_path(@question) %> |
<%= link_to 'Back to question', @question %> 
