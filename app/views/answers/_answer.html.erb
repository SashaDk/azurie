<div class="line">
  <%= link_to answer.user.display_name.upcase, user_path(answer.user), :class => 'open' %>
	<ul>
    <li><span><%= answer.user.occupation %> <% if !answer.user.company.blank? %> at <%= answer.user.company %><% end %></span></li>
		<li><%= link_to '0 Comments', question_answer_path(answer.question, answer) + '#disqus_thread' %></li>
		<li>posted <%= distance_of_time_in_words_to_now(answer.created_at) %> ago</li>
	</ul>
</div>
<p><%= answer.text %> <%= link_to "(learn more)", [answer.question,answer] %></a></p>
<% if current_user == answer.user %><p class="edit-block"><a href="<%= url_for edit_question_answer_path(answer.question,answer) %>" class="edit-link">Edit</a></p><% end %>
<div class="book_link"><a href="#">The Long Tail: Why the Future is Selling Less of More</a> | <a href="#">Chris Anderson</a></div>
<% if can? :manage, :all %><p class="edit-block"><a href="<%= url_for edit_question_answer_path(answer.question,answer) %>" class="edit-link">Edit</a>&nbsp;<%= link_to 'Destroy', [answer.question,answer], :confirm => 'Are you sure?', :method => :delete %></p><% end %>
